<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.pedro.mensajerosms.ClavesActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Spinner
            android:id="@+id/spinner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/btnGrabar"
            android:layout_marginTop="60dp"
            android:layout_toEndOf="@+id/edtClave" />

        <EditText
            android:id="@+id/edtMensaje"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/spinner"
            android:layout_alignStart="@+id/edtClave"
            android:layout_below="@+id/edtClave"
            android:layout_marginTop="38dp"
            android:ems="10"
            android:inputType="textMultiLine"
            android:text="Mensaje"
            android:textColorLink="@android:color/holo_green_dark" />

        <Button
            android:id="@+id/btnGrabar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:text="Grabar" />

        <EditText
            android:id="@+id/edtClave"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/spinner"
            android:layout_alignParentStart="true"
            android:layout_marginStart="29dp"
            android:ems="10"
            android:inputType="textPersonName"
            android:text="Clave"
            android:textColorLink="@android:color/holo_green_dark" />
    </RelativeLayout>
</android.support.constraint.ConstraintLayout>
